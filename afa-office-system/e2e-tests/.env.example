# AFA办公系统 E2E 测试环境变量配置

# 测试环境 (local, staging, production, ci)
TEST_ENV=local

# 调试模式 (启用详细日志和截图)
DEBUG=false

# CI 环境标识
CI=false

# 服务URL配置 (仅在非local环境使用)
STAGING_TENANT_URL=https://tenant-staging.afa-office.com
STAGING_MERCHANT_URL=https://merchant-staging.afa-office.com
STAGING_API_URL=https://api-staging.afa-office.com

PROD_TENANT_URL=https://tenant.afa-office.com
PROD_MERCHANT_URL=https://merchant.afa-office.com
PROD_API_URL=https://api.afa-office.com

# 数据库配置 (测试环境)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=afa_office_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# 测试数据管理
INIT_TEST_DATA=true
CLEANUP_TEST_DATA=true
CLEAN_TEST_RESULTS=false

# 测试结果处理
COMPRESS_TEST_RESULTS=false
UPLOAD_TEST_RESULTS=false

# Allure 报告 (可选)
ALLURE_RESULTS_DIR=allure-results

# 性能测试配置
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_PAGE_LOAD=3000
PERFORMANCE_THRESHOLD_API_RESPONSE=2000

# 视觉测试配置
ENABLE_VISUAL_TESTING=false
VISUAL_THRESHOLD=0.2

# 并发测试配置
MAX_CONCURRENT_USERS=5
TEST_LOAD_DURATION=60

# 通知配置 (可选)
SLACK_WEBHOOK_URL=
DINGTALK_WEBHOOK_URL=
EMAIL_NOTIFICATION=false

# 云存储配置 (可选)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# 微信小程序测试配置
WECHAT_APPID=
WECHAT_APPSECRET=

# API 认证配置
TEST_API_KEY=test_api_key_123
TEST_JWT_SECRET=test_jwt_secret_456

# 设备模拟配置
MOCK_DEVICE_API=true
DEVICE_SIMULATOR_URL=http://localhost:8080

# 日志配置
LOG_LEVEL=info
LOG_FILE=test-results/test.log

# 超时配置 (毫秒)
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=10000
NAVIGATION_TIMEOUT=15000
ACTION_TIMEOUT=10000

# 重试配置
MAX_RETRIES=2
RETRY_DELAY=1000

# 浏览器配置
HEADLESS=true
BROWSER_ARGS=--no-sandbox,--disable-dev-shm-usage

# 截图和视频配置
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=on-first-retry