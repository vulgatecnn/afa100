{
  "name": "afa-office-system",
  "version": "1.0.0",
  "description": "AFA办公小程序系统 - 综合性办公通行管理系统",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "node afa-office-system/scripts/test-runner.js",
    "test:verbose": "node afa-office-system/scripts/test-runner.js --verbose",
    "test:silent": "node afa-office-system/scripts/test-runner.js --silent",
    "test:coverage": "node afa-office-system/scripts/test-runner.js --coverage",
    "test:parallel": "node afa-office-system/scripts/test-runner.js --parallel",
    "test:backend": "node afa-office-system/scripts/test-runner.js --module=backend",
    "test:frontend": "node afa-office-system/scripts/test-runner.js --module=frontend-tenant && node afa-office-system/scripts/test-runner.js --module=frontend-merchant",
    "test:miniprogram": "node afa-office-system/scripts/test-runner.js --module=miniprogram",
    "test:legacy": "pnpm -r test",
    "test:coverage:legacy": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter backend dev",
    "backend:test": "pnpm --filter backend test",
    "frontend:dev": "pnpm --filter tenant-admin dev && pnpm --filter merchant-admin dev",
    "frontend:build": "pnpm --filter tenant-admin build && pnpm --filter merchant-admin build",
    "db:init": "pnpm --filter backend db:init",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:reset": "pnpm --filter backend db:reset",
    "ci:test": "node scripts/test-environment-orchestrator.js all",
    "ci:test:unit": "node scripts/test-environment-orchestrator.js unit",
    "ci:test:integration": "node scripts/test-environment-orchestrator.js integration",
    "ci:test:e2e": "node scripts/test-environment-orchestrator.js e2e",
    "ci:env:create": "node scripts/ci-test-environment.js create",
    "ci:env:destroy": "node scripts/ci-test-environment.js destroy",
    "ci:env:recreate": "node scripts/ci-test-environment.js recreate",
    "ci:report": "node scripts/ci-test-reporter.js generate",
    "ci:report:html": "node scripts/ci-test-reporter.js generate html",
    "ci:report:json": "node scripts/ci-test-reporter.js generate json",
    "ci:report:markdown": "node scripts/ci-test-reporter.js generate markdown",
    "e2e:env:start": "node scripts/e2e-environment-manager.js start",
    "e2e:env:stop": "node scripts/e2e-environment-manager.js stop",
    "e2e:env:restart": "node scripts/e2e-environment-manager.js restart",
    "e2e:env:reset": "node scripts/e2e-environment-manager.js reset",
    "e2e:env:status": "node scripts/e2e-environment-manager.js status",
    "e2e:env:verify": "node scripts/e2e-environment-manager.js verify",
    "e2e:services:start": "node scripts/e2e-service-manager.js start",
    "e2e:services:stop": "node scripts/e2e-service-manager.js stop",
    "e2e:services:status": "node scripts/e2e-service-manager.js status",
    "e2e:db:init": "node scripts/e2e-database-manager.js init",
    "e2e:db:reset": "node scripts/e2e-database-manager.js reset",
    "e2e:db:clean": "node scripts/e2e-database-manager.js clean",
    "e2e:db:verify": "node scripts/e2e-database-manager.js verify"
  },
  "devDependencies": {
    "@faker-js/faker": "10.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "办公系统",
    "小程序",
    "通行管理",
    "访客管理",
    "typescript",
    "express",
    "react"
  ],
  "author": "AFA Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}