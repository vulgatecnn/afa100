# pnpm配置文件
# 使用pnpm作为包管理器
engine-strict=true

# 设置镜像源（可选，根据网络情况调整）
# registry=https://registry.npmmirror.com/

# 启用严格的peer依赖检查
strict-peer-dependencies=true

# 自动安装peer依赖
auto-install-peers=true

# 保存精确版本
save-exact=true

# 禁用包提升（可选，提高依赖隔离性）
# hoist=false

# 设置存储目录（可选）
# store-dir=~/.pnpm-store

# 启用shamefully-hoist（兼容性考虑）
shamefully-hoist=false