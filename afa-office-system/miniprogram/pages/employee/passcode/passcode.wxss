/* 员工通行码页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #e8f5e8 0%, #f5f5f5 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.passcode-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.qr-container {
  position: relative;
  display: inline-block;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.3);
}

.qr-canvas {
  display: block;
  border-radius: 12rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.qr-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
}

.overlay-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.refresh-timer {
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.timer-text {
  color: #fff;
  font-size: 24rpx;
  display: block;
  text-align: center;
  margin-bottom: 8rpx;
}

.timer-progress {
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
  transition: width 1s linear;
}

.passcode-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-active {
  background-color: #52c41a;
}

.status-expired {
  background-color: #ff4d4f;
}

.status-revoked {
  background-color: #d9d9d9;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.btn-refresh, .btn-history {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-refresh {
  background-color: #1890ff;
  color: #fff;
}

.btn-refresh[disabled] {
  background-color: #d9d9d9;
  color: #999;
}

.btn-history {
  background-color: #f5f5f5;
  color: #666;
}

.employee-section, .quick-actions, .instructions-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-grid {
  display: grid;
  gap: 24rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  position: relative;
  transition: all 0.3s;
}

.action-item:active {
  background-color: #e6f7ff;
  transform: scale(0.95);
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.approval-icon {
  background-color: #faad14;
}

.history-icon {
  background-color: #1890ff;
}

.settings-icon {
  background-color: #52c41a;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.action-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.number {
  width: 48rpx;
  height: 48rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.text {
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
}