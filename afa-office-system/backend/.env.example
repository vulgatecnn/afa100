# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库类型配置
DB_TYPE=mysql

# MySQL应用数据库配置（生产环境主数据库）
APP_DB_TYPE=mysql
APP_DB_HOST=127.0.0.1
APP_DB_PORT=3306
APP_DB_USER=afa_app_user
APP_DB_PASSWORD=afa_app_secure_password_2024
APP_DB_NAME=afa_office
APP_DB_CONNECTION_LIMIT=10
APP_DB_ACQUIRE_TIMEOUT=60000
APP_DB_TIMEOUT=60000

# MySQL测试数据库配置（测试环境）
TEST_DB_TYPE=mysql
TEST_DB_HOST=127.0.0.1
TEST_DB_PORT=3306
TEST_DB_USER=afa_test_user
TEST_DB_PASSWORD=afa_test_secure_password_2024
TEST_DB_NAME=afa_office_test
TEST_DB_CONNECTION_LIMIT=5
TEST_DB_ACQUIRE_TIMEOUT=30000
TEST_DB_TIMEOUT=30000

# MySQL管理员配置（仅用于初始化和管理）
MYSQL_ADMIN_HOST=127.0.0.1
MYSQL_ADMIN_PORT=3306
MYSQL_ADMIN_USER=root
MYSQL_ADMIN_PASSWORD=your-mysql-root-password

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 微信小程序配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS配置
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# 通行码配置
PASSCODE_DEFAULT_DURATION=24
PASSCODE_DEFAULT_USAGE_LIMIT=10
PASSCODE_REFRESH_INTERVAL=5