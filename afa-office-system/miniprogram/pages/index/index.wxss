/* 首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.welcome-section {
  text-align: center;
  padding: 60rpx 0;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  color: #fff;
}

.logo-container {
  margin-bottom: 32rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.user-section {
  margin-bottom: 40rpx;
}

.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-type {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.user-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-active {
  background-color: #52c41a;
}

.status-pending {
  background-color: #faad14;
}

.status-inactive {
  background-color: #d9d9d9;
  color: #666;
}

.menu-section {
  margin-bottom: 40rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.group-title, .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  position: relative;
  transition: all 0.3s;
}

.menu-item:active {
  background-color: #e6f7ff;
  transform: scale(0.95);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.visitor-apply-icon {
  background-color: #1890ff;
}

.visitor-status-icon {
  background-color: #faad14;
}

.employee-passcode-icon {
  background-color: #52c41a;
}

.visitor-approve-icon {
  background-color: #722ed1;
}

.visitor-icon {
  background-color: #13c2c2;
}

.employee-icon {
  background-color: #eb2f96;
}

.menu-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.menu-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

.quick-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.quick-item:active {
  background-color: #e6f7ff;
  transform: scale(0.95);
}

.quick-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.history-icon {
  background-color: #1890ff;
}

.support-icon {
  background-color: #52c41a;
}

.help-icon {
  background-color: #faad14;
}

.quick-text {
  font-size: 24rpx;
  color: #666;
}

.login-section {
  text-align: center;
  padding: 60rpx 40rpx;
}

.btn-login {
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.login-tip {
  display: block;
  font-size: 24rpx;
  color: #666;
}