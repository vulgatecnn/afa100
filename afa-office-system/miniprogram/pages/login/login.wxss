/* 登录页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

.login-header {
  text-align: center;
  padding: 120rpx 40rpx 80rpx;
  color: #fff;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin-bottom: 40rpx;
}

.app-name {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.app-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.login-content {
  flex: 1;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx 40rpx;
}

.feature-list {
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.visitor-icon {
  background-color: #1890ff;
}

.employee-icon {
  background-color: #52c41a;
}

.qr-icon {
  background-color: #faad14;
}

.security-icon {
  background-color: #722ed1;
}

.feature-text {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.login-actions {
  text-align: center;
}

.btn-wechat-login {
  width: 100%;
  height: 96rpx;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.btn-wechat-login[disabled] {
  background-color: #91d5ff;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.login-tips {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.tip-link {
  color: #1890ff;
  text-decoration: underline;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  background-color: #fff;
  border-radius: 24rpx;
  width: 640rpx;
  max-width: 90vw;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  text-align: center;
  padding: 48rpx 32rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.user-type-list {
  padding: 32rpx;
}

.user-type-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  background-color: #f9f9f9;
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.user-type-item:last-child {
  margin-bottom: 0;
}

.user-type-item:active {
  background-color: #e6f7ff;
  transform: scale(0.98);
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.visitor-type-icon {
  background-color: #1890ff;
}

.employee-type-icon {
  background-color: #52c41a;
}

.type-info {
  flex: 1;
}

.type-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.type-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.modal-actions {
  padding: 24rpx 32rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-cancel {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
}