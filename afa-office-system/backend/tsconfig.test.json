{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals", "@types/supertest"],
    "skipLibCheck": false,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "tests/types"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "database/**/*",
    "tests/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}